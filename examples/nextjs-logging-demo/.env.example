# Next.js Logging Demo - Configuration
# Copy this file to .env.local to enable logging features

# Master switch - must be true to enable logging features
DEBUG_MODE=true

# Browser logging
DEBUG_BROWSER_EXCEPTIONS=true
DEBUG_BROWSER_REQUESTS=true
DEBUG_BROWSER_QUERIES=true

# Server logging
DEBUG_SERVER_LOGS=true
DEBUG_SERVER_API=true

# @zaob/glean-logger Configuration
# Log level (debug, info, warn, error)
LOG_LEVEL=debug

# Log directory for server-side file rotation
LOG_DIR=./_logs

# Maximum file size per log file (e.g., 10m, 1g, 100k)
LOG_MAX_SIZE=20m

# Maximum number of days to retain logs (e.g., 14d, 2w, 336h)
LOG_MAX_FILES=14d

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000

# Batch settings for browser log submission
LOG_BATCH_SIZE=10
LOG_BATCH_INTERVAL=5000
