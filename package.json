{
  "name": "@zaob/glean-logger",
  "version": "1.0.0",
  "description": "Production-ready logging module for Node.js/TypeScript with auto environment detection, browser-safe logging, and Winston server logging with daily file rotation",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "browser": {
        "import": "./dist/browser-entry.mjs",
        "require": "./dist/browser-entry.js"
      },
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.mjs"
    },
    "./types": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./browser": {
      "types": "./dist/browser-entry.d.ts",
      "import": "./dist/browser-entry.mjs",
      "require": "./dist/browser-entry.js",
      "default": "./dist/browser-entry.mjs"
    },
    "./server": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "files": [
    "dist/",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "setup": "./setup.sh",
    "install:deps": "./install.sh",
    "build": "NODE_ENV=production tsup",
    "build:watch": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.js,.mjs --fix",
    "lint:check": "eslint . --ext .ts,.js,.mjs",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "docs": "typedoc",
    "test": "vitest",
    "test:ci": "vitest --run --coverage",
    "test:watch": "vitest --watch",
    "prebuild": "npm run typecheck",
    "pub": "npm run build && npm run lint:check && npm run format:check && npm run test:ci && npm publish --provenance",
    "release": "npm run build && git add -A && git commit -m 'chore: release v$(cat VERSION)' && git tag v$(cat VERSION) && git push && git push --tags",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,js,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "logger",
    "logging",
    "winston",
    "typescript",
    "nodejs",
    "browser",
    "logrotation",
    "nextjs",
    "react"
  ],
  "author": "Zaob <zaob.ogn@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/maemreyo/glean-logger.git",
    "directory": "."
  },
  "bugs": {
    "url": "https://github.com/maemreyo/glean-logger/issues"
  },
  "homepage": "https://github.com/maemreyo/glean-logger#readme",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/maemreyo"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^22.10.0",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^17.15.0",
    "eslint-plugin-promise": "^7.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "^3.7.4",
    "tsup": "^8.5.1",
    "typedoc": "^0.27.0",
    "typescript": "^5.9.0",
    "typescript-eslint": "^8.53.0",
    "vitest": "^4.0.16",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  }
}
