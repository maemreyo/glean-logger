{
  "$schema": "https://release-it.com/schema.json",
  "git": {
    "commitMessage": "chore(release): ${version}",
    "tagName": "v${version}",
    "tagAnnotation": "Release ${version}",
    "push": true,
    "pushArgs": ["--follow-tags"]
  },
  "npm": {
    "publish": true,
    "publishArgs": ["--provenance"],
    "packageFiles": ["package.json"]
  },
  "github": {
    "release": true,
    "releaseName": "Release v${version}",
    "draft": false,
    "prerelease": false
  },
  "hooks": {
    "before:init": [
      "npm run typecheck",
      "npm run lint:check",
      "npm run format:check",
      "npm run build"
    ],
    "before:version": ["echo ${version} > VERSION"],
    "after:init": ["npm run test:ci"]
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits",
        "types": [
          { "type": "feat", "section": "Features" },
          { "type": "fix", "section": "Bug Fixes" },
          { "type": "perf", "section": "Performance Improvements" },
          { "type": "refactor", "section": "Code Refactoring" },
          { "type": "style", "section": "Styles" },
          { "type": "docs", "section": "Documentation" },
          { "type": "test", "section": "Tests" },
          { "type": "build", "section": "Build System" },
          { "type": "ci", "section": "CI/CD" },
          { "type": "chore", "section": "Maintenance" },
          { "type": "revert", "section": "Reverts" }
        ]
      },
      "infile": "CHANGELOG.md",
      "header": "# Changelog\n\nAll notable changes to this project will be documented in this file.\n\nThe format is based on [Keep a Changelog](https://keepachangelog.com/en/1.0.0/),\nand this project adheres to [Semantic Versioning](https://semver.org/spec/v2.0.0.html).\n\nGenerated by [release-it](https://github.com/release-it/release-it).\n",
      "ignore": {
        "patterns": ["node_modules/**", "dist/**", "*.log"],
        "entryway": "top-of-file"
      }
    }
  },
  "version": {
    "preIncrement": false,
    "increment": true,
    "source": "git"
  }
}
